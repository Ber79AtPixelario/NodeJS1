﻿<div id="box">
	<h3>Nuevo usuario</h2>
	<div>
	
		
	{{#if users}}
<table>
		
			<tr>
				<th>
					Usuario
				</th>
				<th style="width: 80px;">
				Editar
				</th>
                <th style="width: 80px;">
					Permisos
				</th>
                <th style="width: 80px;">
					Contraseña
				</th>                
				<th style="width: 80px;">
					Borrar
				</th>				
			</tr>
		{{# users}}
			<tr>
				<td>
					{{user.email}}
				</td>
					<td>
						<a href="/admin/users/edit/{{user.id}}" class = "boton_grilla pencil" title="Editar usuario">Editar usuario</a>
					</td>
					<td>
						<a href="/admin/users/roles/edit/{{user.id}}" class = "boton_grilla group_gear" title="Editar Roles">Editar Roles</a>
					</td>
					<td>
						<a href="/admin/users/password/edit/{{user.id}}" class="boton_grilla key" title="Cambiar Contraseña">Cambiar Contraseña</a>
					</td>
					<td>
						<form action="/admin/users/delete/{{user.id}}" method="post">
							<input type="image" src="/img/icons/bin.png" value="Eliminar Usuario" title="Eliminar Usuario"
								alt="Eliminar Usuario" />
						</form>
				</td>                    
			</tr>
		{{/users}}	
	<tr>
		<td colspan="4"></td><td><a href="/admin/users/new" title="Nuevo usuario" class = "boton_grilla add">Nuevo usuario<a></td>
	</tr>	
	</table>
	{{else}}
		No hay usuarios en la Base de datos.
		<a href="/admin/users/new" title="Nuevo usuario" class = "comandos_box add>Nuevo usuario<a>		
	{{/if}}	
</div>
</div>